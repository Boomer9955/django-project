pipeline { 
    agent any 
    stages {
        stage('Cloning our Git') { 
            steps { 
                checkout scm
            }
        }
        stage('Building our image') { 
            steps {
                ansiblePlaybook becomeUser: 'boomer', credentialsId: 'myserver01', disableHostKeyChecking: true, inventory: 'ansible/hosts.yml', playbook: 'ansible/ansible_script.yml', sudoUser: 'boomer'                
            }
        }
    }
}
